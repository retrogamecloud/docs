{
  "$schema": "https://mintlify.com/schema.json",
  "name": "RetroGame Hub",
  "theme": "mint",
  "colors": {
    "primary": "#00ff88",
    "light": "#55ffaa",
    "dark": "#00aa55"
  },
  "customCss": ["retro-theme.css"],
  "analytics": {
    "customScripts": [
      {
        "src": "/topbar-buttons.js"
      }
    ]
  },
  "favicon": "/logo/favicon.svg",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "topbarLinks": [
    {
      "name": "GitHub",
      "url": "https://github.com/retrogamecloud"
    }
  ],
  "topbarCtaButton": {
    "name": "Jugar Ahora",
    "url": "https://retrogamehub.games"
  },
  "footerSocials": {
    "github": "https://github.com/retrogamecloud"
  },
  "search": {
    "prompt": "Buscar en la documentaci√≥n..."
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true,
    "raiseIssue": true
  },
  "anchors": [
    {
      "name": "GitHub",
      "icon": "github",
      "url": "https://github.com/retrogamecloud"
    }
  ],
  "navigation": {
    "pages": [
      {
        "group": "Inicio",
        "pages": [
          "index",
          "quickstart",
          "architecture"
        ]
      },
      {
        "group": "Backend Unificado",
        "pages": [
          "backend/overview",
          "backend/database-schema",
          "backend/api-endpoints"
        ]
      },
      {
        "group": "Frontend",
        "pages": [
          "frontend/overview",
          "frontend/jsdos-integration"
        ]
      },
      {
        "group": "Kong API Gateway",
        "pages": [
          "kong/overview",
          "kong/configuration",
          "kong/plugins"
        ]
      },
      {
        "group": "Infraestructura AWS",
        "pages": [
          "infrastructure/overview",
          "infrastructure/terraform-bootstrap",
          "infrastructure/eks-cluster",
          "infrastructure/rds-database",
          "infrastructure/database-migrations-guide",
          "infrastructure/route53-ssl",
          "infrastructure/cdn",
          "infrastructure/monitoring",
          "infrastructure/security",
          "infrastructure/secrets-management",
          "infrastructure/cost-optimization"
        ]
      },
      {
        "group": "Desarrollo Local",
        "pages": [
          "development/local-setup",
          "development/docker-compose",
          "development/testing-guide",
          "development/e2e-testing",
          "development/code-standards",
          "development/contributing"
        ]
      },
      {
        "group": "CI/CD y GitOps",
        "pages": [
          "cicd/overview",
          "cicd/github-actions",
          "cicd/gitops-workflow",
          "cicd/kubernetes-deployment"
        ]
      },
      {
        "group": "Troubleshooting",
        "pages": [
          "troubleshooting/index",
          "troubleshooting/kubernetes"
        ]
      }
    ]
  }
}
