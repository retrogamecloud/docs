{
  "$schema": "https://mintlify.com/docs.json",
  "name": "RetroGame Cloud",
  "theme": "mint",
  "version": "2.0",
  "colors": {
    "primary": "#00ff88",
    "light": "#55ffaa",
    "dark": "#00aa55"
  },
  "favicon": "/logo/favicon.svg",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "GitHub",
        "href": "https://github.com/retrogamecloud"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Jugar Ahora",
      "href": "https://retrogamehub.games"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/retrogamecloud"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentación",
        "groups": [
          {
            "group": "1. Introducción",
            "pages": [
              "index",
              "quickstart",
              "desarrollo-local"
            ],
            "description": "Introducción al proyecto, inicio rápido y configuración del entorno de desarrollo local"
          },
          {
            "group": "2. Arquitectura",
            "pages": [
              "architecture",
              "sequence-diagrams"
            ],
            "description": "Visión general de la arquitectura del sistema, patrones de diseño y diagramas de secuencia"
          },
          {
            "group": "3. Microservicios",
            "pages": [
              "services/auth-service",
              "services/user-service",
              "services/game-catalog",
              "services/score-service",
              "services/ranking-service"
            ],
            "description": "Documentación técnica de cada microservicio: autenticación, usuarios, catálogo, puntuaciones y rankings"
          },
          {
            "group": "4. Frontend",
            "pages": [
              "frontend/overview",
              "frontend/jsdos-integration"
            ],
            "description": "Aplicación web, componentes React e integración con el emulador js-dos"
          },
          {
            "group": "5. Seguridad y Autenticación",
            "pages": [
              "infrastructure/oauth2-authentication"
            ],
            "description": "Implementación de OAuth2, gestión de tokens JWT y políticas de seguridad"
          },
          {
            "group": "6. Infraestructura AWS",
            "pages": [
              "infrastructure/overview",
              "infrastructure/eks-cluster",
              "infrastructure/networking",
              "infrastructure/cdn-cloudfront",
              "infrastructure/route53-ssl",
              "infrastructure/monitoring"
            ],
            "description": "Despliegue en la nube: clúster EKS, redes VPC, CDN CloudFront, DNS Route53 y monitorización"
          },
          {
            "group": "7. CI/CD y GitOps",
            "pages": [
              "cicd/overview",
              "cicd/github-actions",
              "cicd/gitops-workflow",
              "infrastructure/argocd-gitops"
            ],
            "description": "Automatización de pipelines con GitHub Actions, flujos GitOps y despliegue continuo con ArgoCD"
          },
          {
            "group": "8. Configuración",
            "pages": [
              "configuration",
              "deployment"
            ],
            "description": "Variables de entorno, configuración de servicios y guías de despliegue en distintos entornos"
          },
          {
            "group": "9. Operaciones",
            "pages": [
              "troubleshooting"
            ],
            "description": "Resolución de problemas, debugging, logs y mantenimiento del sistema"
          }
        ]
      },
      {
        "tab": "Referencia API",
        "groups": [
          {
            "group": "Autenticación",
            "pages": [
              "api-reference/auth/login",
              "api-reference/auth/register",
              "api-reference/auth/verify",
              "api-reference/auth-service"
            ],
            "description": "Endpoints para login, registro de usuarios, verificación de tokens y documentación técnica del servicio"
          },
          {
            "group": "Usuarios",
            "pages": [
              "api-reference/user-service"
            ],
            "description": "Gestión de perfiles, actualización de datos personales y preferencias de usuario"
          },
          {
            "group": "Catálogo de Juegos",
            "pages": [
              "api-reference/games/list",
              "api-reference/games/get",
              "api-reference/game-catalog-service"
            ],
            "description": "Listado de juegos disponibles, búsqueda, filtros y obtención de detalles específicos"
          },
          {
            "group": "Puntuaciones",
            "pages": [
              "api-reference/scores/submit",
              "api-reference/scores/get",
              "api-reference/score-service"
            ],
            "description": "Envío de puntuaciones de partidas, consulta de histórico y validación de resultados"
          },
          {
            "group": "Rankings",
            "pages": [
              "api-reference/rankings/global",
              "api-reference/rankings/by-game",
              "api-reference/ranking-service"
            ],
            "description": "Tablas de clasificación globales, rankings por juego individual y estadísticas de jugadores"
          },
          {
            "group": "Especificaciones Técnicas",
            "pages": [
              "api-reference/backend-main",
              "api-reference/frontend",
              "api-reference/infrastructure-docs",
              "api-reference/kong-config",
              "api-reference/kubernetes-manifests"
            ],
            "description": "Documentación técnica completa: arquitectura backend, frontend, infraestructura, API Gateway Kong y manifiestos Kubernetes"
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/retrogamecloud",
          "icon": "github"
        },
        {
          "anchor": "Jugar",
          "href": "https://retrogamehub.games",
          "icon": "gamepad"
        }
      ]
    }
  }
}