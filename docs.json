{
  "$schema": "https://mintlify.com/docs.json",
  "name": "RetroGame Cloud",
  "theme": "mint",
  "colors": {
    "primary": "#00ff88",
    "light": "#55ffaa",
    "dark": "#00aa55"
  },
  "favicon": "/logo/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentación",
        "groups": [
          {
            "group": "Inicio",
            "pages": [
              "index",
              "quickstart",
              "desarrollo-local",
              "architecture"
            ]
          },
          {
            "group": "Infraestructura",
            "pages": [
              "infrastructure/overview",
              "infrastructure/eks-cluster",
              "infrastructure/networking",
              "infrastructure/monitoring"
            ]
          },
          {
            "group": "CI/CD y GitOps",
            "pages": [
              "cicd/overview",
              "cicd/github-actions",
              "cicd/gitops-workflow"
            ]
          },
          {
            "group": "Servicios",
            "pages": [
              "services/auth-service",
              "services/game-catalog",
              "services/score-service",
              "services/ranking-service",
              "services/user-service"
            ]
          },
          {
            "group": "Frontend",
            "pages": [
              "frontend/overview",
              "frontend/jsdos-integration"
            ]
          }
        ]
      },
      {
        "tab": "Referencia API",
        "groups": [
          {
            "group": "Autenticación",
            "pages": [
              "api-reference/auth/login",
              "api-reference/auth/register",
              "api-reference/auth/verify"
            ]
          },
          {
            "group": "Juegos",
            "pages": [
              "api-reference/games/list",
              "api-reference/games/get"
            ]
          },
          {
            "group": "Puntuaciones",
            "pages": [
              "api-reference/scores/submit",
              "api-reference/scores/get"
            ]
          },
          {
            "group": "Rankings",
            "pages": [
              "api-reference/rankings/global",
              "api-reference/rankings/by-game"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/retrogamecloud",
          "icon": "github"
        },
        {
          "anchor": "Jugar",
          "href": "https://retrogamehub.games",
          "icon": "gamepad"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "GitHub",
        "href": "https://github.com/retrogamecloud"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Jugar Ahora",
      "href": "https://retrogamehub.games"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/retrogamecloud"
    }
  }
}
